%h1 Routes
%h3 List the routes
%table(class="table table-hover table-condensed")
  %thead
    %tr
      %th Route
      %th Name
      %th Members
      %th
      %th

  %tbody
    - @myroutes.each do |myroute|
      %tr
        %td= myroute.id
        %td= link_to myroute.name, "/routes/show/#{myroute.id}"
        %td= myroute.route_members.size
        %td= link_to 'Show', "/routes/show/#{myroute.id}"
        %td= link_to 'Download', "/routes/show/#{myroute.id}.csv"


%br
= render 'entity_noroutes'
= render 'entity_tworoutes'
